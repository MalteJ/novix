default: help
alice       =       69.193.119.179
esme        =       185.3.94.67

sync: alice esme

alice:
	@echo "Sync: alice   [$(alice)]"
	@./sync $(alice) alice

esme:
	@echo "Sync: esme    [$(esme)]"
	@./sync $(esme) esme

.PHONY: help
help:  ## ๐ค Show help messages for make targets
	@grep -E '^[a-zA-Z_-]+:.*?## .*$$' $(MAKEFILE_LIST) | sort | awk 'BEGIN {FS = ":.*?## "}; {printf "\033[32m%-30s\033[0m %s\n", $$1, $$2}'
